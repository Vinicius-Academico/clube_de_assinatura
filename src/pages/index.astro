---
import Layout from "../layouts/Layout.astro";
import TopBar from "../components/TopBar/TopBar.astro";
import MidContentOfTop from "../components/MidContentOfTop/MidContentOfTop.astro";
import EndOfTop from "../components/EndOfTop/EndOfTop.astro";
import SectionDois from "../components/SectionDois/index.astro";
import SectionTres from "../components/SectionTres/index.astro";
import Footer from "../components/Footer/index.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="background-wrapper">
      <div class="container-1">
        <TopBar />
        <MidContentOfTop />
        <EndOfTop />
        <SectionDois />
        <SectionTres />
        <Footer />
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    background: linear-gradient(to right, #13081b, #0c0715, #13081b);
    width: 100%;
    min-height: 100vh;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    color: white;
    font-size: 20px;
    line-height: 1.6;
    overflow-y: auto;
  }

  .background-wrapper {
    width: 100%;
    min-height: 100vh;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    position: relative;
  }

  .container-1 {
    background-image: url("/public/assets/lpAssets/hero-background.png");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    width: 100%;
    max-height: 100vh;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-direction: column;
    box-sizing: border-box;
    color: white;
  }

  .container-1::after {
    content: "";
    position: absolute;
    top: 100vh; /* Começa logo após 100vh */
    left: 0;
    width: 100%;
    height: 100%; /* Pode ajustar conforme necessário */
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0),
      #13081b
    ); /* Exemplo de um gradiente */
    z-index: -1; /* Fica atrás do conteúdo */
  }
</style>
